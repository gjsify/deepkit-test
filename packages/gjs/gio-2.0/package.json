{
    "name": "@gjsify/gio-2.0",
    "version": "0.0.1",
    "description": "Extended Gio-2.0 module for Gjsify",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "type": "module",
    "scripts": {
        "clear": "rm -rf lib",
        "build": "gjsify build --library src/**/*.{ts,js}",
        "build:test": "gjsify build src/test.ts --platform gjs --outfile test.gjs.js",
        "test": "yarn run build && yarn run build:test && yarn run test:gjs",
        "test:gjs": "gjs -m test.gjs.js"
    },
    "keywords": [
        "gjs",
        "node",
        "console"
    ],
    "devDependencies": {
        "@gjsify/cli": "workspace:^",
        "@gjsify/unit": "workspace:^",
        "@types/node": "^18.7.16"
    }
}

{
    "name": "@gjsify/gio-2.0",
    "version": "0.0.1",
    "description": "Extended Gio-2.0 module for Gjsify",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "type": "module",
    "scripts": {
        "clear": "rm -rf lib",
        "print:name": "echo '@gjsify/gio-2.0'",
        "build": "yarn run build:gjsify && yarn run build:types",
        "build:gjsify": "gjsify build --library src/**/*.{ts,js}",
        "build:types": "tsc --emitDeclarationOnly || exit 0",
        "build:test": "gjsify build src/test.ts --app gjs --outfile test.gjs.js",
        "test": "yarn run print:name && yarn run build && yarn run build:test && yarn run test:gjs",
        "test:gjs": "gjs -m test.gjs.js"
    },
    "keywords": [
        "gjs",
        "node",
        "console"
    ],
    "devDependencies": {
        "@gjsify/cli": "workspace:^",
        "@gjsify/unit": "workspace:^",
        "@types/node": "^18.7.18",
        "typescript": "^4.8.3"
    },
    "dependencies": {
        "@gjsify/types": "workspace:^"
    }
}

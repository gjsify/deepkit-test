{
    "name": "@gjsify/utils",
    "version": "0.0.1",
    "description": "Utils module for gjsify",
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "types": "lib/types/index.d.ts",
    "type": "module",
    "scripts": {
        "clear": "rm -rf lib",
        "build": "yarn run build:gjsify && yarn run build:types",
        "build:gjsify": "gjsify build --library src/**/*.{ts,js}",
        "build:types": "tsc --emitDeclarationOnly || exit 0",
        "build:test": "yarn run build:test:gjs",
        "build:test:gjs": "gjsify build src/test.ts --platform gjs --outfile test.gjs.js",
        "test": "yarn run build && yarn run build:test && yarn run test:gjs",
        "test:gjs": "gjs -m test.gjs.js"
    },
    "keywords": [
        "gjs",
        "node",
        "fs"
    ],
    "devDependencies": {
        "@gjsify/cli": "workspace:^",
        "@gjsify/types": "workspace:^",
        "typescript": "^4.8.3"
    }
}

{
    "compilerOptions": {
      "module": "ESNext",
      "lib": ["DOM"],
      "target": "ESNext",
      "moduleResolution": "bundler",
      "experimentalDecorators": true,
      "outDir": "lib",
      "rootDir": "src",
      "composite": true,
      "strict": true
    },
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "reflection": false,
    "include": ["src/**/*.ts"],
    "exclude": ["src/test.ts", "src/**/*.spec.ts"]
}
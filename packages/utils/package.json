{
    "name": "@gjsify/utils",
    "version": "0.0.1",
    "description": "utils module for gjsify",
    "main": "lib/index.mjs",
    "module": "lib/index.mjs",
    "type": "module",
    "scripts": {
        "build": "yarn run build:js && yarn run build:types",
        "build:js": "node --experimental-import-meta-resolve esbuild.mjs",
        "build:types": "tsc --emitDeclarationOnly",
        "test": "yarn run build:js && yarn run test:gjs",
        "test:gjs": "gjs -m test.gjs.js"
    },
    "keywords": [
        "gjs",
        "node",
        "fs"
    ],
    "devDependencies": {
        "@gjsify/types": "workspace:^",
        "typescript": "^4.8.2"
    }
}

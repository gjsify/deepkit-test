{
  "compilerOptions": {
    "rootDir": "src/ts",
		"outDir": "lib",
    	"declarationDir": "lib",
		"tsBuildInfoFile": "tmp/.tsbuildinfo",
		"target": "es2020",
		"declaration": true,
		"module": "CommonJS",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"composite": true,
		"incremental": true,
    	"typeRoots": ["node_modules", "src/ts/@types"],
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"DOM"
		]
	},
	"skipLibCheck": true,
	"allowJs": true,
	"checkJs": false,
	"reflection": false,
	"include": ["src/ts/**/*.ts"],
	"exclude": ["src/ts/test.ts", "src/ts/**/*.spec.ts"]
}
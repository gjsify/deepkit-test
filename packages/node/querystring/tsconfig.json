{
    "compilerOptions": {
      "module": "ESNext",
      "types": ["node"],
      "target": "ESNext",
      "moduleResolution": "Node",
      "experimentalDecorators": true,
      "outDir": "lib",
      "rootDir": "src",
      "composite": true,
      "allowSyntheticDefaultImports": true,
    },
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "reflection": false,
    "include": ["src/**/*.ts"],
    "exclude": ["src/test.ts", "src/**/*.spec.ts"]
}
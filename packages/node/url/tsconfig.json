{
    "compilerOptions": {
      "module": "ESNext",
      "types": ["node"],
      "target": "ESNext",
      "experimentalDecorators": true,
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "outDir": "lib",
      "rootDir": "src",
      "composite": true
    },
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "reflection": false,
    "include": ["src/**/*.ts"]
}
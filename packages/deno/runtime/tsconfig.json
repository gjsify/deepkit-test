{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Deno",
    "compilerOptions": {
        "jsx": "react",
        "module": "ESNext",
        "target": "ESNext",
        "noLib": true,
        "outDir": "lib",
        "declaration": true,
        "declarationDir": "lib",
        "rootDir": ".",
        "composite": true,
        "resolveJsonModule": false,
        "allowJs": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true
    },
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "reflection": false,
    "include": ["src/core/**/*.ts", "src/ext/**/*.ts", "src/ops/**/*.ts", "src/runtime/**/*.ts", "src/types/**/*.ts", "src/cli/js/*.ts", "src/cli/ops/*.ts", "src/*.ts", "src/cli/tsc/dts/lib.deno.*.d.ts"],
    "exclude": ["node_modules/**"]
}
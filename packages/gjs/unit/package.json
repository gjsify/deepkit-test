{
  "name": "@gjsify/unit",
  "version": "0.0.1",
  "description": "A BDD-style testing framework for Gjs",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "test": "test.js",
  "scripts": {
    "build": "yarn run build:gjsify && yarn run build:types",
    "build:gjsify": "gjsify build --library src/index.ts",
    "build:types": "tsc --emitDeclarationOnly",
    "build:test": "yarn run build:test:gjs && yarn run build:test:node",
    "build:test:gjs": "gjsify build src/test.ts --platform gjs --outfile test.gjs.js",
    "build:test:node": "gjsify build src/test.ts --platform node --outfile test.node.js",
    "test": "yarn run build && yarn run build:test && yarn run test:node && yarn run test:gjs",
    "test:gjs": "gjs -m test.gjs.js",
    "test:node": "node test.node.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gjsify/unit.git"
  },
  "keywords": [
    "gjs",
    "test",
    "tdd",
    "bdd"
  ],
  "author": "Philipp Hoffmann <mail@philipphoffmann.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gjsify/unit/issues"
  },
  "homepage": "https://github.com/gjsify/unit#readme",
  "devDependencies": {
    "@gjsify/cli": "workspace:^",
    "typescript": "^4.8.2"
  }
}

{
  "name": "@gjsify/unit",
  "version": "0.0.1",
  "description": "A BDD-style testing framework for the gjs Gnome Javascript binding.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "test": "test.js",
  "scripts": {
    "test": "yarn run build:js && yarn run test:gjs && yarn run test:node",
    "test:gjs": "gjs -m test.gjs.js",
    "test:node": "node test.node.js",
    "build": "yarn run build:js && yarn run build:types",
    "build:js": "node esbuild.mjs",
    "build:types": "tsc --emitDeclarationOnly"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gjsify/unit.git"
  },
  "keywords": [
    "gjs",
    "test",
    "tdd",
    "bdd"
  ],
  "author": "Philipp Hoffmann <mail@philipphoffmann.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gjsify/unit/issues"
  },
  "homepage": "https://github.com/gjsify/unit#readme",
  "devDependencies": {
    "typescript": "^4.8.2"
  }
}

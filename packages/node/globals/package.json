{
  "name": "@gjsify/globals",
  "version": "0.0.1",
  "description": "Node.js globals module for Gjs",
  "keywords": [
    "gjs",
    "node",
    "globals"
  ],
  "author": "Pascal Garber",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "scripts": {
    "clear": "rm -rf lib",
    "build": "gjsify build --library src/**/*.{ts,js}",
    "build:test": "yarn run build:test:gjs && yarn run build:test:node",
    "build:test:gjs": "gjsify build src/test.mts --platform gjs --outfile test.gjs.mjs",
    "build:test:node": "gjsify build src/test.mts --platform node --outfile test.node.mjs",
    "test": "yarn run build && yarn run build:test && yarn run test:node && yarn run test:gjs",
    "test:gjs": "gjs -m test.gjs.mjs",
    "test:node": "node test.node.mjs"
  },
  "dependencies": {
    "@gjsify/process": "workspace:^",
    "@gjsify/utils": "workspace:^"
  },
  "devDependencies": {
    "@gjsify/cli": "workspace:^",
    "@gjsify/unit": "workspace:^"
  }
}

{
    "name": "@gjsify/cli",
    "version": "0.0.2",
    "description": "CLI for Gjsify",
    "type": "module",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "bin": {
        "gjsify": "./lib/index.js"
    },
    "scripts": {
        "clear": "rm -rf lib tsconfig.tsbuildinfo tsconfig.types.tsbuildinfo || exit 0",
        "print:name": "echo '@gjsify/cli'",
        "start": "node lib/index.js",
        "build": "yarn print:name && tsc && yarn chmod",
        "chmod": "chmod +x ./lib/index.js"
    },
    "keywords": [
        "gjs",
        "node",
        "gjsify",
        "cli"
    ],
    "dependencies": {
        "@gjsify/esbuild-plugin-deepkit": "workspace:^",
        "@gjsify/esbuild-plugin-gjsify": "workspace:^",
        "cosmiconfig": "^8.2.0",
        "esbuild": "^0.18.3",
        "get-tsconfig": "^4.6.0",
        "lodash": "^4.17.21",
        "pkg-types": "^1.0.3",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/yargs": "^17.0.24",
        "typescript": "^5.1.3"
    }
}

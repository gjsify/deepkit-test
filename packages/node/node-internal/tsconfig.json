{
  "compilerOptions": {
    "module": "ESNext",
    "types": ["node"],
    "target": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "declarationDir": "lib",
    "declaration": true,
    "rootDir": "src"
  },
  "skipLibCheck": true,
  "allowJs": true,
  "checkJs": true,
  "reflection": false,
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["src/test.mts", "src/**/*.spec.ts"]
}
{
    "name": "@gjsify/events",
    "version": "0.0.1",
    "description": "Node.js events module for Gjs",
    "type": "module",
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "scripts": {
        "clear": "rm -rf lib",
        "print:name": "echo '@gjsify/events'",
        "build": "yarn print:name && yarn build:gjsify && yarn run build:types",
        "build:gjsify": "gjsify build --library 'src/**/*.{ts,js}' --exclude 'src/**/*.spec.{mts,ts}' 'src/test.{mts,ts}'",
        "build:types": "tsc --project tsconfig.types.json || exit 0",
        "build:test": "yarn run build:test:gjs && yarn run build:test:node",
        "build:test:gjs": "gjsify build src/test.mts --app gjs --outfile test.gjs.mjs",
        "build:test:node": "gjsify build src/test.mts --app node --outfile test.node.mjs",
        "test": "yarn run print:name && yarn run build && yarn run build:test && yarn run test:node && yarn run test:gjs",
        "test:gjs": "gjs -m test.gjs.mjs",
        "test:node": "node test.node.mjs"
    },
    "keywords": [
        "gjs",
        "node",
        "events"
    ],
    "devDependencies": {
        "@gjsify/cli": "workspace:^",
        "@gjsify/unit": "workspace:^",
        "@types/node": "^18.11.18",
        "typescript": "^5.0.0-dev.20230109"
    },
    "dependencies": {
        "@gjsify/deno_std": "workspace:^"
    }
}

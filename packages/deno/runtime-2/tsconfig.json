{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Deno",
    "compilerOptions": {
        "jsx": "react",
        "module": "ESNext",
        "target": "ES2020",
        "lib": ["ES2020"],
        "noLib": false,
        "baseUrl": "./",
        "outDir": "lib",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "lib",
        "rootDir": "src",
        "composite": true,
        "resolveJsonModule": false,
        "allowJs": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "paths": {
            "ext:deno_broadcast_channel/*": ["./src/ext/broadcast_channel/*"],
            "ext:deno_cache/*": ["./src/ext/cache/*"],
            "ext:deno_console/*": ["./src/ext/console/*"],
            "ext:deno_cron/*": ["./src/ext/cron/*"],
            "ext:deno_crypto/*": ["./src/ext/crypto/*"],
            "ext:deno_fetch/*": ["./src/ext/fetch/*"],
            "ext:deno_ffi/*": ["./src/ext/ffi/*"],
            "ext:deno_fs/*": ["./src/ext/fs/*"],
            "ext:deno_http/*": ["./src/ext/http/*"],
            "ext:deno_io/*": ["./src/ext/io/*"],
            "ext:deno_kv/*": ["./src/ext/kv/*"],
            "ext:deno_net/*": ["./src/ext/net/*"],
            "ext:deno_node/*": ["./src/ext/node/polyfills/*"],
            "ext:deno_url/*": ["./src/ext/url/*"],
            "ext:deno_web/*": ["./src/ext/web/*"],
            "ext:deno_webgpu/*": ["./src/ext/webgpu/*"],
            "ext:deno_webidl/*": ["./src/ext/webidl/*"],
            "ext:deno_websocket/*": ["./src/ext/websocket/*"],
            "ext:runtime/*": ["./src/runtime/js/*"],
            "ext:core/*": ["@gjsify/deno-core/*"],
        },
    },
    "reflection": false,
    "include": ["@girs/gjs/ambient", "src/ext/**/*", "src/runtime/**/*", "src/cli/**/*", "src/*"],
    "exclude": ["node_modules", "src/cli/tsc/dts"]
}
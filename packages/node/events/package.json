{
    "name": "@gjsify/events",
    "version": "0.0.1",
    "description": "Node.js events module for Gjs",
    "main": "lib/events.cjs",
    "module": "lib/events.mjs",
    "type": "module",
    "scripts": {
        "clear": "rm -rf lib",
        "build": "gjsify build --library src/index.ts",
        "build:test": "yarn run build:test:gjs && yarn run build:test:node",
        "build:test:gjs": "gjsify build src/test.ts --platform gjs --outfile test.gjs.js",
        "build:test:node": "gjsify build src/test.ts --platform node --outfile test.node.js",
        "test": "yarn run build && yarn run build:test && yarn run test:node && yarn run test:gjs",
        "test:gjs": "gjs -m test.gjs.js",
        "test:node": "node test.node.js"
    },
    "keywords": [
        "gjs",
        "node",
        "fs"
    ],
    "devDependencies": {
        "@gjsify/cli": "workspace:^",
        "@gjsify/unit": "workspace:^",
        "@types/node": "^18.7.16"
    }
}

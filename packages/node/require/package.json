{
  "name": "@gjsify/require",
  "version": "0.0.1",
  "description": "require core module for gjs",
  "keywords": [
    "gjs",
    "node",
    "require"
  ],
  "author": "Pascal Garber",
  "type": "module",
  "main": "lib/index.mjs",
  "module": "lib/index.mjs",
  "scripts": {
    "build": "gjsify build --library src/index.ts",
    "build:test": "yarn run build:test:gjs && yarn run build:test:node",
    "build:test:gjs": "gjsify build src/test.ts --platform gjs --outfile test.gjs.js",
    "build:test:node": "node --experimental-import-meta-resolve esbuild.mjs",
    "test": "yarn run build && yarn run build:test && yarn run test:node && yarn run test:gjs",
    "test:gjs": "gjs -m test.gjs.js",
    "test:node": "node test.node.cjs"
  },
  "dependencies": {
    "@gjsify/process": "workspace:^",
    "@gjsify/resolve-npm": "workspace:^",
    "@gjsify/utils": "workspace:^"
  },
  "devDependencies": {
    "@gjsify/esbuild-plugin-gjsify": "workspace:^",
    "@gjsify/unit": "workspace:^",
    "cowsay2": "^2.0.4"
  }
}

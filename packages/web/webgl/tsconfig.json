{
  "compilerOptions": {
    "module": "ESNext",
    "types": ["node"],
    "target": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "rootDir": "src/ts",
    "composite": true,
    "strict": true,
    "typeRoots": ["node_modules", "src/ts/@types"]
  },
  "skipLibCheck": true,
  "allowJs": true,
  "checkJs": false,
  "reflection": false,
  "include": ["src/ts/**/*.ts"],
  "exclude": ["src/ts/test.ts", "src/ts/**/*.spec.ts"]
}
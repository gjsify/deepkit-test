// See https://github.com/capricorn86/happy-dom/blob/master/packages/happy-dom/tsconfig.json
{
	"compilerOptions": {
		"outDir": "lib",
    	"declarationDir": "lib",
		"rootDir": "src",
		"tsBuildInfoFile": "tsconfig.tsbuildinfo",
		"target": "es2020",
		"declaration": true,
		"emitDeclarationOnly": true,
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"composite": true,
		"incremental": true,
		"types": [
			"node"
		],
		"lib": [
			"es2015",
			"es2016",
			"es2017"
		]
	},
	"include": [
		"@types/node",
		"src"
	],
  	"exclude": ["src/test.mts", "src/**/*.spec.ts"]
}
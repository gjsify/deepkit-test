{
    "name": "@gjsify/deno_runtime",
    "version": "0.0.1",
    "description": "Deno runtime module for gjsify",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "type": "module",
    "scripts": {
        "clear": "rm -rf lib",
        "print:name": "echo '@gjsify/deno_runtime'",
        "build": "yarn run build:gjsify && yarn run build:types",
        "build:gjsify": "gjsify build --library src/**/*.{ts,js}",
        "build:types": "tsc --emitDeclarationOnly || exit 0",
        "build:test": "yarn run build:test:gjs && yarn run build:test:deno",
        "build:test:gjs": "gjsify build src/test.ts --app gjs --outfile test.gjs.js",
        "build:test:deno": "gjsify build src/test.ts --app deno --outfile test.deno.js",
        "test": "yarn run print:name && yarn run build && yarn run build:test && yarn run test:deno && yarn run test:gjs",
        "test:gjs": "gjs -m test.gjs.js",
        "test:deno": "deno run test.deno.js"
    },
    "keywords": [
        "gjs",
        "deno",
        "globals"
    ],
    "devDependencies": {
        "@gjsify/cli": "workspace:^",
        "@gjsify/unit": "workspace:^",
        "@tsconfig/deno": "^1.0.6",
        "@types/node": "^18.7.18"
    },
    "dependencies": {
        "@gjsify/deno_core": "workspace:^"
    }
}
